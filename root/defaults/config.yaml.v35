  full_metadata_retrieval: true
  log_level: 2
  timestamped_logs: true

trackers:
  - name: blue
    user: username
    password: secretpassword
    url: https://blue.ch
  - name: purple
    user: another_username
    cookie: cookievalue
    url: https://purple.cd
  - name: magenta
    user: yet_another_username
